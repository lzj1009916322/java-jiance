<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.weservice.catering.wtakeout.modules.app.dao.PayInfoDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.weservice.catering.wtakeout.modules.app.entity.PayInfoEntity" id="payInfoMay">
        <result property="id" column="id"/>
        <result property="money" column="money"/>
        <result property="createTime" column="create_ime"/>
        <result property="updateTime" column="update_time"/>
        <result property="flag" column="flag"/>
    </resultMap>

    <update id="update">
        update pay_info
        <trim prefix="set" suffixOverrides=",">
            <if test="money!=null">money=#{money},</if>
            <if test="flag !=null and flag!=''">flag=#{flag},</if>
            <if test="updateTime!=null">update_time=#{updateTime},</if>
        </trim>
        WHERE id=#{id}
    </update>
    <insert id="add" keyProperty="id">
        insert into pay_info (id, money, create_time, update_time, flag)
        values (#{id}, #{money}, now(), now(), 'pre')
    </insert>
    <select id="selectByTime" resultType="com.weservice.catering.wtakeout.modules.app.entity.PayInfoEntity">
        select * from pay_info
        <where>
            <if test="beginTime!=null">
                create_time <![CDATA[>=]]> #{beginTime}
            </if>
            <if test="endTime!=null">
                create_time <![CDATA[<]]> #{endTime}
            </if>
            <if test="flag!=null and flag!=''">
               flag=#{flag}
            </if>
        </where>
    </select>
</mapper>